<h1>People</h1>
<div class="row">
  <div class="col-md-9">
    <%= link_to 'New Person', new_person_path, class: 'btn btn-primary' %>
  </div>
  <div class="col-md-3">
    <%= paginate @people, theme: 'twitter-bootstrap-3' %>
  </div>

</div>

<table class="table table-striped table-hover">
  <thead class="thead-default">
  <tr>
    <th>First name & Last name</th>
    <th>Email</th>
    <th>Age</th>
    <th>Delete button</th>
  </tr>
  </thead>
  <tbody>
  <% @people.each do |person| %>
      <tr>
        <td><%= link_to person.full_name, person %></td>
        <td><%= person.email %></td>
        <td><%= person.age %></td>
        <td><%= link_to 'Destroy', person, data: {confirm: 'Are you sure?'}, method: :delete, class: 'btn btn-danger' %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @people, theme: 'twitter-bootstrap-3' %>